{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist",
    "declaration": true,
    "declarationDir": "../dts",
    "sourceMap": true
  }
}
